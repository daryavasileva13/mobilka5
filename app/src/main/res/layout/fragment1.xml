<!-- fragment_sports_academy.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1">

    <androidx.fragment.app.FragmentContainerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/imageView_sports_academy"
        android:layout_width="wrap_content"
        android:layout_height="221dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="2dp"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/text_sports_academy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="244dp"
        android:text="Спорт-клуб “Академия спорта” - это не просто клуб для тренировок, это новое “место силы”, которое будет собирать самых активных. Вас ждёт огромный выбор услуг, профессиональные тренеры и новейшее оборудование" />

    <ImageView
        android:id="@+id/imageView_legs"
        android:layout_width="142dp"
        android:layout_height="141dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="244dp"
        app:srcCompat="@drawable/img_1" />

    <TextView
        android:id="@+id/text_opening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="12dp"
        android:text="Режим работы:" />

    <TextView
        android:id="@+id/text_opening_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="323dp"
        android:text="Каждый день с 9:00 до 23:00" />

    <TextView
        android:id="@+id/text_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="259dp"
        android:text="Контакты: +7 (499)999-99-99" />

    <Button
        android:id="@+id/button_our_sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp"
        android:text="Наши секции"
        android:backgroundTint="@color/button_color"
        android:onClick="onButtonClick"/>

</RelativeLayout>